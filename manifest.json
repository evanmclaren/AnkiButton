{
    "manifest_version": 3,
    "name": "Anki Button",
    "version": "1.0",
    "description": "Indicates the number of Anki cards remaining to review for the day.",
    "permissions": ["activeTab", "storage"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    }
}